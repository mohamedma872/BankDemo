<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/dulogo" />
<TextView  android:layout_marginTop="150dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textStyle="bold"
    android:textSize="14pt"
    android:text="Welocome to DU  "/>


    <Button
        android:visibility="gone"
        android:id="@+id/sigin"
        style="@style/button"
        android:drawableLeft="@drawable/ic_record_voice_over_black_24dp"
        android:text="Open My Account" />

    <Button android:layout_gravity="bottom" android:layout_marginTop="35dp"
        android:id="@+id/back"
        style="@style/button"
        android:text="Done" />
</LinearLayout>
